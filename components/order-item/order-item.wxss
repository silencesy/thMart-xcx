.order-item {
  margin-bottom: 24rpx;
}
.order-item:last-child {
  margin-bottom: 0;
}
.order-item .title {
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
  padding: 0 24rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}
.name {
  margin-right: 10rpx;
}
.content {
  padding: 24rpx;
  display: flex;
  background-color: #fff;
}
.content .img-box {
  flex: 1;
}
.content .img-box image {
  width: 100%;
}
.content .info {
  flex: 2;
  padding-left: 24rpx;
  position: relative;
}
.content .info .type {
  position: absolute;
  left: 24rpx;
  bottom: 5rpx;
  color: #666;
}
.content .price-count {
  flex: 0.5;
  position: relative;
}
.price-count>view:nth-child(1) {
  color: #f6442b;
}
.price-count>view:nth-child(2) {
  color: #666;
  text-decoration: line-through;
  margin-top: 10rpx;
}
.price-count>view:nth-child(3) {
  color: #444;
  position: absolute;
  left: 0;
  bottom: 5rpx;
}

    