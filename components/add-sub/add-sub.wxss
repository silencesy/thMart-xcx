.add-sub-box {
  height: 60rpx;
  display: flex;
  margin-top: 10rpx;
  width: 100%;
  float: right;
}
.add-sub-box > view {
  flex: 1;
  text-align: center;
  background-color: #E8E8E8;
  height: 50rpx;
  line-height: 50rpx;
}
.add-sub-box > view:nth-child(2) {
  margin: 0 1px;
  font-size: 24rpx;
}