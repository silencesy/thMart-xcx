.product-container {
  padding: 15rpx; 
  width: 100%;
  display: flex;
  flex-wrap:wrap; 
}
.product-container .product-item {
   width: 50%;
}

.product-name.line2 {
  display:-webkit-box;
  overflow:hidden;
  white-space:normal!important;
  text-overflow:ellipsis;
  word-wrap:break-word;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  padding: 0 15rpx;
}

.product-item-imgbox image {
   width: 100%;
}
.product-price-box {
  display: flex;
  padding-bottom: 15rpx;
}
.product-price-box .product-price:nth-child(1) {
  padding-left: 15rpx;
  color: #f24827;
}
.product-price-box .product-price{
  flex: 1;
  text-align: left;
}