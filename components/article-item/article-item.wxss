.article-container {
  width: 100%;
  margin-top: 10px;
  background-color: #fff;
}
.article-container > image {
  width:100%;
  height:150rpx;
}


.article-box {
  display: flex;
  height: 240rpx;
}
.imgbox {
  flex: 3;
  padding: 15rpx;
}
.imgbox image {
  width: 100%;
  height: 100%;
}
.info {
  flex: 5;
  padding: 15rpx;
  position: relative;
}
.info .data {
  position: absolute;
  right: 24rpx;
  bottom: 15rpx;
}