@import "/wxParse/wxParse.wxss";
.product-swiper {
  height: 750rpx;
}
.product-swiper image {
  width: 100%;
}

.title-info {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 24rpx;
}

.specifications-box {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 24rpx;
}

.specifications-box view {
  flex: 1;
}

.specifications-box view:nth-child(2) {
  color: #bbb;
  transform:rotate(180deg);
  -ms-transform:rotate(180deg);
  -moz-transform:rotate(180deg);
  -webkit-transform:rotate(180deg);
  -o-transform:rotate(180deg); 
}

.product-info-content {
  background-color: #fff;
  margin-top: 20rpx;
}

.product-info-content .title {
  line-height: 80rpx;
  border-bottom: 1px solid #dfdfdf;
  padding: 0 24rpx;
}

.product-info-content .info-content {
      padding:  24rpx 24rpx 104rpx 24rpx;   
} 
.wxParse-img {
  display:block !important;
}
.footer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  display: flex;
  background-color: #fff;
  box-shadow:0px 0px 20px #ddd;
}
.footer-container > view {
  display: flex;
}
.footer-container .icon-item-container {
  flex: 1;
}
.footer-container .item-container {
  flex: 1.2;
}
.footer-container .icon-item-container view {
  flex: 1;
  text-align: center;
}
.footer-container .item-container view {

  text-align: center;
  color: #fff;
}
.footer-container .item-container view:nth-child(1) {
  background-color: #f6b12b;
  flex: 1.2;
}
.footer-container .item-container view:nth-child(2) {
  background-color: #f6442b;
  flex: 1;
}
.icon-box {
  display: flex;
  flex-direction:column;
}
.icon-box view:nth-child(1) {
  flex: 1.5;
  font-size: 35rpx;
  line-height:55rpx;
  color: #919191;
}
.icon-box view:nth-child(2) {
  font-size: 20rpx;
  line-height: 24rpx;
  flex: 1;
  color: #919191;
}