.shop-head {
  background-color: #f6442b;
  display: flex;
  height: 140rpx;
  line-height: 140rpx;
}
.shop-head .left {
  flex: 1;
  display: flex;
}
.shop-head .right {
  flex: 1;
  display: flex;
  text-align: right;
  margin-right: 40rpx;
}
.shop-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12px;
  flex: 0.2;
  margin: 20rpx 20rpx 0 20rpx;
}
.shop-name {
  color: #fff;
}
.shop-head .right navigator {
  flex: 1;
  color: #fff;
}
.shop-head .right view {
  flex: 1;
  color: #fff;
}

.shop-nav {
  background-color: #fff;
  display: flex;
  text-align: center;
}
.shop-nav > navigator {
  flex: 1;
  color: #999;
  padding: 20rpx 0;
}
.shop-nav > navigator:after {
  content: '|';
  float: right;
  margin-top: -2rpx;
  color: #999;
}
.shop-nav > navigator:last-child:after {
  content: ' '; 
}
.shop-nav .theme_color {
  color: #f6442b;
}

.shop-swiper {
  height: 500rpx;
}
.shop-swiper image {
  width: 100%;
}

.shop-content {
  margin-bottom: 80rpx;
}
.shop-content image {
  width: 100%;
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255,255,255,.8);
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}
.bottom > navigator {
  flex: 1;
  text-align: center;
}
.bottom > navigator:first-child:after {
  content: '|';
  float: right;
  margin-top: -2rpx;
  color: #999;
}
.bottom text {
  padding-left: 10rpx;
  color: #666;
}
.icon-kefu {
  color: #f6442b;
}

.fixed-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  border-bottom: 1px solid #DFDFDF;
}
.margin-top {
  margin-top: 80rpx;
}