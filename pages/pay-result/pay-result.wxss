.address {
  width: 100%;
  margin-bottom: 20rpx;
}
.address > view:first-child {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.address > view > view {
   margin-bottom: 5rpx; 
}
.address image {
  width: 100%;
  height: 12rpx;
  display: block;
}
.result {
  background-color: #fff;
}
.total {
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
}
.total text {
  color: #fb442b;
}
.btn {
  display: flex;
  width: 100%;
  justify-content: space-between; 
  text-align: center;
  padding: 0 60rpx 60rpx 60rpx;
  box-sizing: border-box;
}
.btn navigator {
  display: inline-block;
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #dfdfdf;
  border-radius: 28rpx;
}