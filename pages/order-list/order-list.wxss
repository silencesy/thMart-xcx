page {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 82rpx;
}
.order-container {
  flex: 1;
}
.order-container .title {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}
.order-container .title > view {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
}
.actvie {
  color: #f6442b;
  border-bottom: 1px solid #f6442b;
}
.content {
  width: 100%;
  height: 100%;
}
.content swiper {
  width: 100%;
  height: 100%;
}
.content swiper,swiper-item,scroll-view {
  width: 100%;
  height: 100%;
}
