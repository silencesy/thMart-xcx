.content {
  background-color: #fff;
  padding: 24rpx;
}
.content .name,.content .phone {
  border-bottom: 1px solid #c8c7cc;
  display: flex;
}
.content .name input,.content .phone input {
  flex: 1;
  height: 80rpx;
  padding-left: 15rpx;
  font-size: 30rpx;
}
.content .name text,.content .phone text {
  height: 80rpx;
  line-height: 80rpx;
}
textarea {
  width: 100%;
  border: 1px solid #c8c7cc;
  margin-top: 24rpx;
  padding: 20rpx;
  box-sizing:border-box;
  -moz-box-sizing:border-box;
  font-size: 30rpx;
}
.set-Default-btn {
  margin-top: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  display: flex;
  padding: 0 24rpx;
}
.iconfont.icon-duihao {
  margin-right: 15rpx;
}
.save {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6442b;
  color: #fff;
  text-align: center;
}