/**index.wxss**/
/* 轮播 */
.home-swiper {
  height: 410rpx;
}
.home-swiper image {
  width: 100%;
}
/* 区块 */
.section {
  margin-top: 10px;
  background-color: #fff;
  height: 535rpx;
}
.section.shop {
  height: 450rpx;
}
.section .section-banner {
  width: 100%;
  height: 150rpx;
}
.section .product-scroll {
  display: flex;
  white-space: nowrap;
}
.section .product-scroll .product-item {
  display: inline-block;
  width:200rpx;
  height: 200rpx;
  margin-left: 20rpx;
}
.section .product-scroll .product-item:last-child {
  margin-right: 20rpx;
}

.product-container {
  padding-top: 10rpx;
}

.product-container .product-item image {
  width: 100%;
  height: 100%;
}

/* hotproduct */
.hot-product-container {
  display:flex;
  justify-content:space-between;
  flex-wrap:wrap;
  box-sizing:content-box;
  padding:24rpx 24rpx 0 24rpx;
  background-color: #fff;
}
.hot-product-container .product-item {
  width:220rpx;
  background-color:#fff;
  overflow:hidden;
  align-self: flex-start;
}

.hot-product-container .product-item .imgbox {
  width:220rpx;
  height:220rpx;
  overflow:hidden;

}
.hot-product-container .product-item .imgbox image {
  width:220rpx;
  height:220rpx;
}

.product-name {
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal!important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 82rpx;
}
.section.shop .product-name {
  height: auto;
}

.hot-product-container .product-name {
  height: 82rpx;
}
.product-price-box {
  display: flex;
}
.product-price {
  width:280rpx;
  line-height: 60rpx;
  overflow:hidden;
  font-size:24rpx;
  /* padding:24rpx 0; */
  color:#e64340;
  margin-left:24rpx;
}

.product-price-box .product-price:nth-child(2) {
  color: #ccc;
  text-decoration: line-through;
}


.loading {
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}
@keyframes rotating {
  from{transform:rotate(0)}
  to{transform:rotate(360deg)}
}

.icon-jiazai1.iconfont {
  animation:rotating 1.2s linear infinite;
}

