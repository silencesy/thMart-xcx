  </view>
  <view class='info-item'>
    <view>Email</view>
    <view class='name'>      
      <text>123@qq.com</text>
      <text class='iconfont icon-fanhui'></text>
    </view>
  </view>
  <view class='info-item'>
    <view>Change Password</view>
    <view>
      <text class='iconfont icon-fanhui'></text>
    </view>
  </view>
</view>

