    <view>
      <image class='touxiang' src='../../images/touxiang.png'></image>
      <view class='iconfont icon-fanhui'></view>
    </view>
  </view>
  <view class='info-item'>
    <view>Username</view>
    <view class='name'>
      <text>鞋带</text>
