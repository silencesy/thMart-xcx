.product-list-contianer {
  padding-top: 80rpx;
}
.nav {
  display: flex;
  height: 80rpx;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
  justify-content: center;
  align-items: center;
}
.nav > view {
  flex: 1;
  text-align: center;
  color: #8f8f94;
  position: relative;
}
.nav > view:nth-child(1) {
  border-right: 1px solid #8f8f94;
}
